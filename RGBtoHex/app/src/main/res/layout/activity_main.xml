<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/layout"
    android:background="#000000"
    >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:minHeight="320dp"
        android:minWidth="50dp"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="center">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.3">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Load"
            android:textSize="12dp"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="loadColor"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:onClick="saveColor"
            android:textSize="12dp"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delete"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:onClick="deleteColor" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reset Data"
            android:id="@+id/button12"
            android:textSize="11dp"
            android:layout_weight="1"
            android:lines="2"
            android:onClick="hardReset"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/podglad"
        android:layout_weight="5"
        android:onClick="show"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.4">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="R"
                android:textSize="15dp"
                android:id="@+id/textView"
                android:layout_weight="6"
                android:textAlignment="gravity"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="15dp"
                android:id="@+id/button4"
                android:layout_weight="5"
                android:gravity="center"
                android:onClick="rless"
                android:textColor="#ffffff"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_weight="3"
                android:max="255"
                android:textAlignment="center"
                android:indeterminate="false"
                android:layout_gravity="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="15dp"
                android:id="@+id/button5"
                android:layout_weight="5"
                android:gravity="center"
                android:onClick="rmore"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="G"
                android:textSize="15dp"
                android:id="@+id/textView2"
                android:layout_weight="6"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="15dp"
                android:id="@+id/button6"
                android:layout_weight="5"
                android:gravity="center"
                android:onClick="gless"
                android:textColor="#ffffff"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:layout_weight="3"
                android:max="255"
                android:layout_gravity="center"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/button7"
                android:textSize="15dp"
                android:layout_weight="5"
                android:gravity="center"
                android:onClick="gmore"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="B"
                android:textSize="15dp"
                android:id="@+id/textView3"
                android:layout_weight="6"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="15dp"
                android:id="@+id/button8"
                android:gravity="center"
                android:singleLine="true"
                android:layout_weight="5"
                android:onClick="bless"
                android:textColor="#ffffff"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:layout_weight="3"
                android:max="255"
                android:layout_gravity="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="15dp"
                android:id="@+id/button9"
                android:gravity="center"
                android:layout_weight="5"
                android:onClick="bmore"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/red"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:hint="RED"
                    android:clickable="true"
                    android:onClick="redText"
                    android:textColorHint="#ffffff"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#ffffff" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/green"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:hint="GREEN"
                    android:textSize="15dp"
                    android:textColorHint="#ffffff"
                    android:gravity="center"
                    android:onClick="greenText"
                    android:textColor="#ffffff"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blue"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:onClick="blueText"
                    android:hint="BLUE"
                    android:textSize="15dp"
                    android:textColorHint="#ffffff"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:minWidth="15dp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hexa"
                android:inputType="text"
                android:clickable="true"
                android:hint="Hexadecimal"
                android:onClick="hexText"
                android:textSize="15dp"
                android:textColorHint="#ffffff"
                android:layout_weight="5"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.3">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RGB to Hex"
            android:id="@+id/button"
            android:textSize="12dp"
            android:layout_weight="1"
            android:onClick="rgbToHex"
            android:textColor="#ffffff"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hex to RGB"
            android:textSize="12dp"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="hexToRGB"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>
