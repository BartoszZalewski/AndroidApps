<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:id="@+id/main">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:background="@drawable/endturn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="nextPlayer"
                android:id="@+id/button14"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button1"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button2"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button3"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button4"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button5"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button6"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/button7"
                android:onClick="letterButtonFunction"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/change"
                android:onClick="exchangeLetters"
                android:id="@+id/button8"
                android:layout_weight="1" />

            <Button
                android:background="@drawable/choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="choose"
                android:id="@+id/button9"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:background="@drawable/gameboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="board"
            android:id="@+id/button16"
            android:layout_weight="4.5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Points: "
            android:id="@+id/textView2"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <Button
                android:background="@drawable/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="save"
                android:id="@+id/button23"
                android:layout_weight="1" />

            <Button
                android:background="@drawable/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menu"
                android:id="@+id/button24"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
